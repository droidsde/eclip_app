<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fragment_bkg"
    android:orientation="vertical" >

    <com.batterydoctor.superfastcharger.fastcharger.ui.MainTitle
        android:id="@+id/mode_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.batterydoctor.superfastcharger.fastcharger.ui.MainTitle>

    <LinearLayout
        android:id="@id/new_mode_name_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/new_mode_title_margin_top_bottom"
        android:paddingLeft="@dimen/new_mode_title_margin_left_right"
        android:paddingRight="@dimen/new_mode_title_margin_left_right"
        android:paddingTop="@dimen/new_mode_title_margin_top_bottom" >

        <TextView
            android:id="@id/mode_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:text="@string/mode_newmode_name_setting_hint"
            android:textColor="#ff9a9a9a"
            android:textSize="@dimen/new_mode_title_text_size" />

        <EditText
            android:id="@id/nameedit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/feedback_editor_bkg"
            android:gravity="center|clip_horizontal"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/local_white"
            android:textSize="@dimen/new_mode_title_text_size" />
    </LinearLayout>

    <ScrollView
        android:id="@id/newmode_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@id/newmode_setting_items"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <include
                android:id="@id/brightness_layout" 
                layout="@layout/mode_normal_setting_item"/>
            <include
                android:id="@id/screentimeout_layout" 
                layout="@layout/mode_normal_setting_item"/>
            <include
                android:id="@id/vibrate_layout"  
                layout="@layout/mode_switch_setting_item"/>
            <include
                android:id="@id/wlan_layout"  
                layout="@layout/mode_switch_setting_item"/>
            <include
                android:id="@id/bluetooth_layout" 
                layout="@layout/mode_switch_setting_item"/>
            <include
                android:id="@id/mobile_layout" 
                layout="@layout/mode_switch_setting_item"/>
            <include
                android:id="@+id/airplane_layout"  
                layout="@layout/mode_switch_setting_item"/>
            <include
                android:id="@id/gps_layout" 
                layout="@layout/mode_switch_setting_item"/>
            
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="0.02"
        android:background="@color/tab_indicator_background_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/new_mode_title_margin_top_bottom"
        android:paddingLeft="@dimen/new_mode_title_margin_left_right"
        android:paddingRight="@dimen/new_mode_title_margin_left_right"
        android:paddingTop="@dimen/new_mode_title_margin_top_bottom"
        android:weightSum="2.0" >

        <Button
            android:id="@id/save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_mode_title_buttoms_margin"
            android:layout_weight="1.0"
            android:background="@drawable/power_analysis_button"
            android:text="@string/mode_newmode_save"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />

        <Button
            android:id="@id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/power_analysis_button"
            android:text="@string/mode_newmode_cancel"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </LinearLayout>

</LinearLayout>