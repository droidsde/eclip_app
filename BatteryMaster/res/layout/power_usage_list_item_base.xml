<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/icon"
        android:contentDescription="@string/app_name"
        android:layout_width="@dimen/monitor_list_item_image"
        android:layout_height="@dimen/monitor_list_item_image"
        android:layout_marginRight="@dimen/monitor_list_item_image_margin_right"
        android:scaleType="fitCenter"/>
	<LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="@dimen/mode_list_item_height"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/label"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/monitor_button_text_color"
                android:textSize="@dimen/monitor_item_text_size" />

            <TextView
                android:id="@id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/monitor_button_text_color"
                android:textSize="@dimen/monitor_item_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/progress_image"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/monitor_list_item_percent_margin_left"
                android:layout_weight="1.0" />

            <TextView
                android:id="@id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/monitor_percent_text_color"
                android:textSize="@dimen/monitor_item_text_size_small" />
        </LinearLayout>
    </LinearLayout>
</merge>
