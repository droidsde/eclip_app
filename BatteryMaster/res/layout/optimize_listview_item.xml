<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/list_item_height" >


    <ImageView
        android:id="@id/icon"
        android:layout_width="@dimen/monitor_list_item_image"
        android:layout_height="@dimen/monitor_list_item_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/monitor_list_item_image_margin_right"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@id/check"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/monitor_button_text_color"
            android:textSize="@dimen/monitor_item_text_size" />

        <TextView
            android:id="@id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:textColor="@color/monitor_button_text_color"
            android:textSize="@dimen/monitor_item_text_size_small" />
    </RelativeLayout>

</RelativeLayout>