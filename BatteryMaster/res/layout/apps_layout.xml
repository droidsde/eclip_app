<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/mode_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_bkg"
    android:orientation="vertical"
    android:layout_weight="1.0" >
	 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/tab_indicator_background_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/new_mode_title_margin_top_bottom"
        android:paddingLeft="@dimen/new_mode_title_margin_left_right"
        android:paddingRight="@dimen/new_mode_title_margin_left_right"
        android:paddingTop="@dimen/new_mode_title_margin_top_bottom"
        android:weightSum="2.0" >

        <Button
            android:id="@+id/open_usage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_mode_title_buttoms_margin"
            android:layout_weight="1.0"
            android:background="@drawable/power_analysis_button"
            android:text="@string/apps_open_usage"
            android:textColor="#ffffffff"
            android:textSize="@dimen/monitor_button_text_size" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/power_analysis_button"
            android:text="@string/apps_refresh"
            android:textColor="#ffffffff"
            android:textSize="@dimen/monitor_button_text_size"  />
    </LinearLayout>
    
    <include layout="@layout/progressbar_loading_list_emty"
        android:id="@id/progress"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:id="@id/list"></ListView>

</LinearLayout>
