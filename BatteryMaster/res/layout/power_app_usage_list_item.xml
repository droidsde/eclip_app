<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mode_list_item_height"
    android:paddingLeft="@dimen/list_item_margin_left_right"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <include
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="fill_parent" 
        layout="@layout/power_usage_list_item_base"/>
	<TextView
        android:id="@id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/monitor_button_margin_left"
        android:gravity="center"
        android:background="@drawable/power_analysis_button"
        android:paddingLeft="@dimen/monitor_button_text_padding_two"
        android:paddingRight="@dimen/monitor_button_text_padding_two"
        android:text="@string/apps_usage_stop_app"
        android:textColor="@color/monitor_button_text_color"
        android:textSize="@dimen/monitor_button_text_size" />
</LinearLayout>
