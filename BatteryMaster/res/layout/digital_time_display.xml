<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView android:id="@id/digital_time_text_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/digital_text_value"/>
	<TextView android:id="@id/digital_time_text_hours_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_digital_time_hour"
        android:textColor="@color/home_time_digital_unit_color"
        android:textSize="@dimen/digital_text_lable"/>
    <TextView android:id="@id/digital_time_text_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/digital_text_value"/>
	<TextView android:id="@id/digital_time_text_minutes_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_digital_time_minute"
        android:textColor="@color/home_time_digital_unit_color"
        android:textSize="@dimen/digital_text_lable"/>
</merge>
