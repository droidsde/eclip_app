<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:power="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battery_details_item_bkg"
    android:orientation="vertical" >

    <com.batterydoctor.superfastcharger.fastcharger.ui.MainTitle
        android:id="@id/pesonal_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        power:title_text="@string/app_name" >
    </com.batterydoctor.superfastcharger.fastcharger.ui.MainTitle>

    <ScrollView
        android:id="@id/slideout_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/personal_center_padding"
            android:paddingRight="@dimen/personal_center_padding" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/personal_center_margin_top"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/personal_center_settings" />
            </LinearLayout>

            <TextView
                android:id="@id/phone_model"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_center_account_margin_top"
                android:drawableLeft="@drawable/batterycenter_phoneicon"
                android:drawablePadding="@dimen/personal_center_model_padding"
                android:gravity="left|center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/personal_center_account_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_center_phone_model_margin_top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/personal_center_divider"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent" />

                <RelativeLayout
                    android:id="@id/rate_button"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/personal_center_button_height"
                    android:layout_weight="1.0"
                    android:background="@drawable/personal_center_button_bkg"
                    android:gravity="center" >

                    <ImageView
                        android:id="@id/rate_icon"
                        android:layout_width="@dimen/personal_center_coin_size"
                        android:layout_height="@dimen/personal_center_coin_size"
                        android:layout_centerVertical="true"
                        android:background="@drawable/batterycenter_rateicon"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/personal_center_button_margin"
                        android:layout_toRightOf="@id/rate_icon"
                        android:singleLine="true"
                        android:text="@string/personal_center_rate"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/personal_center_button_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/personal_center_divider"
                android:layout_marginBottom="@dimen/personal_center_divider_margin_bottom"
                android:layout_marginTop="@dimen/personal_center_divider_margin_top"
                android:background="@color/personal_center_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/personal_center_archievement_margin"
                android:text="@string/personal_center_achievement"
                android:textColor="@color/personal_center_archievement_title"
                android:textSize="@dimen/personal_center_archievement_size" />

            <LinearLayout
                android:id="@id/archievements_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>