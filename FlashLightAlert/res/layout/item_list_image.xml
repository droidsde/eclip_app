<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="horizontal" 
    android:id="@+id/browser_item_body" 
    
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
   	xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:minHeight="?android:listPreferredItemHeight"
 >
    <FrameLayout 
        android:layout_gravity="center" 
        android:orientation="vertical" 
        android:id="@+id/myonlinebooks_item_misc_body" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="0.0dip" 
        android:layout_marginRight="0.0dip" 
        android:baselineAligned="false">
        <ImageView 
            android:layout_gravity="center" 
            android:id="@+id/image" 
            android:padding="1.0dip" 
            android:layout_width="90.0dip" 
            android:layout_height="90.0dip" 
            android:layout_margin="5.0dip" 
            android:src="@drawable/image_defaul" 
            android:scaleType="fitXY" 
            android:layout_weight="1.0" />
        <ProgressBar
          android:id="@+id/progress"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:indeterminateDrawable="@drawable/wolfloader_0" />
    </FrameLayout>
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@+id/browser_item_name_body" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_marginLeft="2.0dip" 
        android:layout_marginTop="3.0dip" 
        android:layout_marginRight="1.0dip" 
        android:layout_marginBottom="3.0dip" 
        android:baselineAligned="false" 
        android:layout_weight="1.0" 
        >

        <TextView 
            android:textSize="13.0sp" 
            android:textStyle="bold" 
            android:textColor="#ff000000" 
            android:layout_gravity="left" 
             android:layout_marginLeft="3.0dip"
            android:id="@+id/text" 
            android:paddingTop="2.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="0dp" 
            android:layout_weight="40"
            android:text="@string/app_name" 
            android:maxLines="2" 
            android:minLines="2"       
             
           />

            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="3.0dip"
                android:layout_weight="60"
                android:maxLines="6"
                android:minLines="6"                
                android:textSize="12.0sp" 
                android:textStyle="italic"
                android:text="Trangsadsadsadsadsadsadsadsadsadsadsadsacsacsacsaccsacsacsacsacsasasadsadsadsadsadasdsadsadsadas" />

           

    </LinearLayout>
</LinearLayout>
